{
	// IntelliSense를 사용하여 가능한 특성에 대해 알아보세요.
	// 기존 특성에 대한 설명을 보려면 가리킵니다.
	// 자세한 내용을 보려면 https://go.microsoft.com/fwlink/?linkid=830387을(를) 방문하세요.
	"version": "0.2.0",
	"configurations": [
		{
			"name": "gcc - 활성 파일 빌드 및 디버그",
			"type": "cppdbg",
			"request": "launch",
			// 디버깅할 테스트 프로그램 자체의 절대경로를 기술
			"program": "${workspaceFolder}/cub3D",
			"args": ["map.cub"],
			// 디버깅이 시작될 때, 스타팅 포인트에서 멈출지, 말지를 정하는 부분
			"stopAtEntry": true,
			// 명령어가 입력되는 부분의 위치, 꼭 프로그램의 위치일 필요는 없다
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "lldb",
			// 제일 중요한 부분 중 하나. task.json의 라벨과 이름이 같아야, 해당 task 파일과 연결됨
			"preLaunchTask": "make cub3d"
		}
	]
}
